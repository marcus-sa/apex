{
  "name": "server-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "tags": ["server"],
  "targets": {
    "build-vite": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "configFile": "{projectRoot}/vite.config.ts",
        "outputPath": "dist/{projectRoot}",
        "buildLibsFromSource": false,
        "emptyOutDir": false,
        "force": true,
        "ssr": true
      },
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve-vite": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite-node --config=apps/server/vite.config.ts --root apps/server apps/server/src/main.ts"
      },
      "configurations": {
        "watch": {
          "command": "vite-node --watch --config=apps/server/vite.config.ts --root apps/server apps/server/src/main.ts"
        }
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/{projectRoot}",
        "outputFileName": "main.mjs",
        "main": "{projectRoot}/src/main.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "assets": [],
        "webpackConfig": "{workspaceRoot}/apps/node-webpack.config.ts",
        "buildLibsFromSource": false
      },
      "configurations": {
        "development": {},
        "production": {
          "optimization": true,
          "sourceMap": true,
          "namedChunks": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "server:build"
      },
      "configurations": {
        "development": {
          "inspect": false,
          "buildTarget": "server-app:build:development"
        },
        "production": {
          "buildTarget": "server-app:build:production"
        }
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/server",
        "command": "ts-node -r tsconfig-paths/register src/seed.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/server/jest.config.ts"
      }
    }
  }
}
